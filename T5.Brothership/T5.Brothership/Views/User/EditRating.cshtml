@model T5.Brothership.ViewModels.UserRatingViewModel

@{
    ViewBag.Title = "Rate";
}

<h2>Edit Rating</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>UserRating</h4>
        <hr />
        <h5 class="text-danger">@ViewBag.Message</h5>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.HiddenFor(model => model.UserRating.RaterUserID, htmlAttributes: new { @class = "control-label col-md-2" })
        </div>

        <div class="form-group">
            @Html.HiddenFor(model => model.UserRating.UserBeingRatedID, htmlAttributes: new { @class = "control-label col-md-2" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.UserRating.Comment, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.UserRating.Comment, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.UserRating.Comment, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @foreach (var rating in Model.Ratings)
                {
                    <div style="display:inline-block;">
                        @if (rating.ID == Model.UserRating.RatingID)
                        {
                            @Html.RadioButtonFor(model => model.UserRating.RatingID, rating.ID, new { @checked = "checked" })
                        }
                        else
                        {
                            @Html.RadioButtonFor(model => model.UserRating.RatingID, rating.ID)
                        }
                        @Html.Label(rating.Description)
                    </div>
                }

            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Rate" class="btn btn-default" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
