@model T5.Brothership.Entities.Models.User

<li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@Model.UserName<span class="caret"></span></a>
    <ul class="dropdown-menu">
        <li>@Html.ActionLink("Profile", "User", "User", new { userName = Model.UserName }, null)</li>
        <li role="separator" class="divider"></li>
        <li>@Html.Action("AccountUpdateLink", "Login")</li>
        <li>@Html.Action("LogoutLink", "Login")</li>
    </ul>
</li>
