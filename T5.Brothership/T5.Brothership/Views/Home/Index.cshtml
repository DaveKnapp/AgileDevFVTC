</div>

<div>
    <form method="post">
        <fieldset>
            <legend>Login</legend>
            <div>
                <label for="Username">Username:</label>
                <input type="text" name="Username" value="" />
            </div>
            <div>
                <label for="Password">Password:</label>
                <input type="text" name="Password" value="" />
            </div>
            <div>
                <label>&nbsp;</label>
                <input type="submit" value="Submit" class="submit" />
            </div>
        </fieldset>
    </form>
</div>

