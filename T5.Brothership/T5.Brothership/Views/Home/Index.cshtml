@{    
    ViewBag.Title = "Home Page";


    if (IsPost)
    {
        try
        {
            string username = Request.Form["Username"];
            string password = Request.Form["Password"];
            CUser oUser = new CUser();

            oUser.Login(username, password);

            <text>
                Your info: <br />
                UserID: @oUser.Id <br />
                UserName: @oUser.UserName <br />
                Password: @oUser.Password <br />
            </text>
        }
        catch (Exception ex)
        {
            <text>
                Error: @ex.Message;
            </text>            
        }


    }
}

